{
    "compilerOptions": {
        "module": "commonjs",
        "target": "esnext",
        "inlineSources": true,
        "outDir": "dist",
        "sourceMap": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "lib": [
            "es2017",
            "es2020.string",
            "dom"
        ]
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}
